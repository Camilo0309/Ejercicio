<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    tools:context="com.i001114.ejercicio.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/system_map_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#6F7A8B"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="LOGIN" />

        <EditText
            android:id="@+id/login_name"
            style="@style/Edit_Text"
            android:hint="Nick/nombre"
            android:inputType="text" />

        <EditText
            android:id="@+id/login_pass"
            style="@style/Edit_Text"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/buttonLogin"
            android:text="Ingresa"
            style="@style/button_style"
            android:onClick="Login"/>

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿No tienes cuenta? Registrate AQUI"
            android:gravity="center"
            android:textColor="#ffffff"
            android:onClick="OPenRegisterWindow"
            android:textStyle="bold"/>

    </LinearLayout>
</RelativeLayout>
